<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="reco.recoshop.Activities.RecoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reco_activity_tvName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/reco_activity_tvCompany"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/reco_activity_tvCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reco_activity_tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="0" />

                <ImageView
                    android:id="@+id/reco_activity_ivStar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/star" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/reco_activity_ivProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <TextView
        android:id="@+id/reco_activity_tvReco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:text="Reco"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="220dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/reco_activity_tvUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/reco_activity_tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reco_activity_tvLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:text="0" />

                <ImageView
                    android:id="@+id/reco_activity_ivLike"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/heart" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/reco_activity_ivReco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:scaleType="fitXY"
            android:text="Product Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/reco_activity_bGoShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goShopping"
            android:text="Go Shopping" />

        <Button
            android:id="@+id/reco_activity_bAddLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addLike"
            android:text="Add Like" />
    </LinearLayout>


</LinearLayout>
