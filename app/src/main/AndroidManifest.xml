<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="reco.recoshop">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/reco_main_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/reco_main_icon"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.SignIn" />
        <activity android:name=".Activities.Register" />
        <activity android:name=".Activities.Categories" />
        <activity android:name=".Activities.CategoryActivity" />
        <activity android:name=".Activities.AddReco" />
        <activity android:name=".Activities.AddProduct" />
        <activity android:name=".Activities.ProductActivity" />
        <activity android:name=".Activities.RecoActivity"></activity>
    </application>

</manifest>